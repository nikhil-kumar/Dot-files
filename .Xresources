!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
 
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintfull
 
!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------
 
URxvt*depth:                32 
URxvt.geometry:             90x30

! Fake Transparency
URxvt.transparent:          true
URxvt*background:002b36
URxvt.shading:		30
URxvt.tintcolor:            #002B36
! Real Transparency
!URxvt.background: [00]#002b36

URxvt.fading:               20
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

Emacs.font: Source Code Pro-10


! Fonts

! Source Code Pro Setup
 
URxvt.allow_bold:           true
URxvt*font: xft:inconsolata for powerline:regular:pixelsize=17
URxvt*imFont: xft:inconsolata for powerline:regular:pixelsize=17
URxvt*boldFont: xft:inconsolata for powerline:semibold:pixelsize=17
URxvt*italicFont: xft:inconsolata for powerline:italic:pixelsize=17
URxvt*boldItalicFont: xft:inconsolata for powerline:semibold:italic:pixelsize=17
URxvt*letterSpace: -1


